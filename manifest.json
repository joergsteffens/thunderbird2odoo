{
  "manifest_version": 2,
  "name": "Odoo Email Importer",
  "version": "0.2.2",
  "description": "Transfer selected email to Odoo",
  "browser_specific_settings": {
    "gecko": { "id": "@thunderbird2odoo.bareos.joergsteffens" }
  },
  "permissions": [
    "menus",
    "messagesRead",
    "notifications",
    "storage",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/odoo-16.png",
    "32": "icons/odoo-32.png",
    "48": "icons/odoo-48.png",
    "96": "icons/odoo-96.png",
    "128": "icons/odoo-128.png"
  }
}
